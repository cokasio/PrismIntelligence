# Notification Service Configuration
# Add these to your .env file for email notifications

# CloudMailin Configuration (Primary)
CLOUDMAILIN_ADDRESS=your-project@cloudmailin.net

# SMTP Configuration (for sending)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Application URL
NEXT_PUBLIC_APP_URL=https://app.prismintel.ai

# Role Email Mappings (comma-separated for multiple recipients)
CFO_EMAILS=cfo@yourcompany.com,finance@yourcompany.com
CONTROLLER_EMAILS=controller@yourcompany.com
PM_EMAILS=propertymanager@yourcompany.com
MAINTENANCE_EMAILS=maintenance@yourcompany.com
ACCOUNTING_EMAILS=accounting@yourcompany.com,ap@yourcompany.com
LEASING_EMAILS=leasing@yourcompany.com
DEFAULT_EMAILS=admin@yourcompany.com

# Daily Digest Configuration
DAILY_DIGEST_SCHEDULE=0 8 * * *  # 8:00 AM daily
ACTIVE_COMPANY_IDS=default-company-id,company-2-id
TZ=America/New_York

# Optional: Test Mode
EMAIL_TEST_MODE=false  # Set to true to log emails instead of sending