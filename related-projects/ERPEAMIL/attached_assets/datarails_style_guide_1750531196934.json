{
  "designSystem": {
    "metadata": {
      "name": "Modern SaaS Platform Design System",
      "style": "Datarails-inspired",
      "version": "1.0.0",
      "description": "Clean, data-focused design system for B2B SaaS platforms",
      "designPhilosophy": "Professional minimalism with bold accent colors and clear data visualization"
    },

    "colorPalette": {
      "primary": {
        "navy": "#1B2951",
        "deepNavy": "#0F1A2E",
        "lightNavy": "#2A3B5C"
      },
      "accent": {
        "brightPink": "#FF1B6B",
        "coral": "#FF4757",
        "orange": "#FF8A00",
        "yellow": "#FFB800"
      },
      "neutral": {
        "white": "#FFFFFF",
        "lightGray": "#F8F9FA",
        "mediumGray": "#E9ECEF",
        "darkGray": "#6C757D",
        "charcoal": "#343A40"
      },
      "semantic": {
        "success": "#28A745",
        "warning": "#FFC107",
        "error": "#DC3545",
        "info": "#17A2B8"
      }
    },

    "typography": {
      "fontFamily": {
        "primary": "Inter, system-ui, -apple-system, sans-serif",
        "secondary": "Roboto, Helvetica, Arial, sans-serif"
      },
      "scale": {
        "hero": {
          "fontSize": "3.5rem",
          "fontWeight": "700",
          "lineHeight": "1.1",
          "letterSpacing": "-0.02em"
        },
        "h1": {
          "fontSize": "2.5rem",
          "fontWeight": "600",
          "lineHeight": "1.2"
        },
        "h2": {
          "fontSize": "2rem",
          "fontWeight": "600",
          "lineHeight": "1.3"
        },
        "h3": {
          "fontSize": "1.5rem",
          "fontWeight": "500",
          "lineHeight": "1.4"
        },
        "body": {
          "fontSize": "1rem",
          "fontWeight": "400",
          "lineHeight": "1.6"
        },
        "small": {
          "fontSize": "0.875rem",
          "fontWeight": "400",
          "lineHeight": "1.5"
        }
      }
    },

    "layout": {
      "hero": {
        "background": "linear-gradient(135deg, #1B2951 0%, #0F1A2E 100%)",
        "textAlign": "center",
        "padding": "120px 0",
        "color": "#FFFFFF"
      },
      "section": {
        "padding": "80px 0",
        "maxWidth": "1200px",
        "margin": "0 auto"
      },
      "container": {
        "maxWidth": "1200px",
        "margin": "0 auto",
        "padding": "0 24px"
      },
      "grid": {
        "columns": 12,
        "gap": "32px"
      }
    },

    "components": {
      "button": {
        "primary": {
          "background": "linear-gradient(135deg, #FF1B6B 0%, #FF4757 100%)",
          "color": "#FFFFFF",
          "border": "none",
          "borderRadius": "8px",
          "padding": "16px 32px",
          "fontSize": "16px",
          "fontWeight": "600",
          "cursor": "pointer",
          "transition": "all 0.3s ease",
          "boxShadow": "0 4px 16px rgba(255, 27, 107, 0.3)",
          "hover": {
            "transform": "translateY(-2px)",
            "boxShadow": "0 8px 24px rgba(255, 27, 107, 0.4)"
          }
        },
        "secondary": {
          "background": "transparent",
          "color": "#1B2951",
          "border": "2px solid #1B2951",
          "borderRadius": "8px",
          "padding": "14px 30px",
          "fontSize": "16px",
          "fontWeight": "600",
          "hover": {
            "background": "#1B2951",
            "color": "#FFFFFF"
          }
        },
        "ghost": {
          "background": "transparent",
          "color": "#6C757D",
          "border": "none",
          "padding": "12px 24px",
          "hover": {
            "color": "#1B2951"
          }
        }
      },

      "card": {
        "base": {
          "background": "#FFFFFF",
          "borderRadius": "16px",
          "padding": "32px",
          "boxShadow": "0 8px 32px rgba(27, 41, 81, 0.08)",
          "border": "1px solid #E9ECEF"
        },
        "elevated": {
          "boxShadow": "0 16px 48px rgba(27, 41, 81, 0.12)",
          "transform": "translateY(-4px)"
        },
        "interactive": {
          "cursor": "pointer",
          "transition": "all 0.3s ease",
          "hover": {
            "transform": "translateY(-8px)",
            "boxShadow": "0 20px 56px rgba(27, 41, 81, 0.16)"
          }
        }
      },

      "featureIcon": {
        "container": {
          "width": "64px",
          "height": "64px",
          "borderRadius": "16px",
          "display": "flex",
          "alignItems": "center",
          "justifyContent": "center",
          "marginBottom": "24px"
        },
        "variants": {
          "pink": {
            "background": "linear-gradient(135deg, #FF1B6B 0%, #FF4757 100%)"
          },
          "orange": {
            "background": "linear-gradient(135deg, #FF8A00 0%, #FFB800 100%)"
          },
          "blue": {
            "background": "linear-gradient(135deg, #17A2B8 0%, #007BFF 100%)"
          }
        }
      },

      "navigation": {
        "navbar": {
          "background": "#FFFFFF",
          "boxShadow": "0 2px 8px rgba(27, 41, 81, 0.08)",
          "padding": "16px 0",
          "position": "sticky"
        },
        "link": {
          "color": "#6C757D",
          "fontSize": "16px",
          "fontWeight": "500",
          "textDecoration": "none",
          "transition": "color 0.3s ease",
          "hover": {
            "color": "#1B2951"
          }
        }
      },

      "dataVisualization": {
        "chartContainer": {
          "background": "#FFFFFF",
          "borderRadius": "12px",
          "padding": "24px",
          "boxShadow": "0 4px 16px rgba(27, 41, 81, 0.06)"
        },
        "colorScheme": [
          "#FF1B6B",
          "#FF8A00",
          "#17A2B8",
          "#28A745",
          "#FFC107"
        ]
      }
    },

    "patterns": {
      "heroSection": {
        "structure": "centered heading + subtext + CTA buttons",
        "background": "navy gradient",
        "textColor": "white",
        "ctaAlignment": "center"
      },
      "featureSection": {
        "layout": "icon + heading + description cards",
        "background": "white or light gray",
        "spacing": "generous padding",
        "iconStyle": "gradient backgrounds"
      },
      "testimonialSection": {
        "layout": "quote + avatar + company logos",
        "background": "navy",
        "textColor": "white"
      },
      "dataSection": {
        "layout": "chart/screenshot + explanatory text",
        "emphasis": "visual hierarchy",
        "background": "alternating white/gray"
      }
    },

    "spacing": {
      "scale": "8px",
      "sizes": {
        "xs": "8px",
        "sm": "16px",
        "md": "24px",
        "lg": "32px",
        "xl": "48px",
        "2xl": "64px",
        "3xl": "80px",
        "4xl": "120px"
      }
    },

    "effects": {
      "shadows": {
        "sm": "0 2px 8px rgba(27, 41, 81, 0.06)",
        "md": "0 8px 32px rgba(27, 41, 81, 0.08)",
        "lg": "0 16px 48px rgba(27, 41, 81, 0.12)",
        "button": "0 4px 16px rgba(255, 27, 107, 0.3)"
      },
      "gradients": {
        "primary": "linear-gradient(135deg, #FF1B6B 0%, #FF4757 100%)",
        "secondary": "linear-gradient(135deg, #FF8A00 0%, #FFB800 100%)",
        "background": "linear-gradient(135deg, #1B2951 0%, #0F1A2E 100%)"
      },
      "transitions": {
        "smooth": "all 0.3s ease",
        "fast": "all 0.2s ease",
        "bounce": "all 0.3s cubic-bezier(0.68, -0.55, 0.265, 1.55)"
      }
    },

    "breakpoints": {
      "mobile": "320px",
      "tablet": "768px",
      "desktop": "1024px",
      "wide": "1200px"
    },

    "usage": {
      "aiInstructions": [
        "Use navy (#1B2951) as primary brand color for headers and text",
        "Apply bright pink (#FF1B6B) gradient for primary CTAs and accents",
        "Maintain generous white space with 80px section padding",
        "Use card-based layouts with subtle shadows and rounded corners",
        "Create visual hierarchy with font weights (400, 500, 600, 700)",
        "Apply hover animations with translateY and shadow increases",
        "Use alternating white/light gray backgrounds for sections",
        "Implement gradient icon containers for features",
        "Maintain 1200px max-width for content containers",
        "Use Inter font family for clean, modern typography"
      ],
      "layoutPatterns": [
        "Hero: Centered content with gradient navy background",
        "Features: 3-column grid with icon + text cards",
        "Social proof: Company logos in grid layout",
        "Product showcase: Screenshot + descriptive text alternating",
        "Testimonials: Quote cards with avatars on navy background",
        "Footer: Multi-column links on navy background"
      ],
      "interactionPrinciples": [
        "Subtle hover animations on interactive elements",
        "Gradient button effects with shadow depth",
        "Card elevation on hover for engagement",
        "Smooth transitions between states",
        "Clear visual feedback for user actions"
      ]
    }
  }
}