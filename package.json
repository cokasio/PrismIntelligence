{
  "name": "property-intelligence-platform",
  "version": "1.0.0",
  "description": "AI-powered property management intelligence platform",
  "private": true,
  "scripts": {
    "dev": "concurrently --names \"Backend,Frontend\" --prefix-colors \"cyan,magenta\" \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "cd apps/dashboard && npm run dev",
    "dev:backend": "cd apps/attachment-loop && npm run dev",
    "attachment-loop:dev": "cd apps/attachment-loop && npm run dev",
    "dashboard:dev": "cd apps/dashboard && npm run dev",
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:frontend": "cd apps/dashboard && npm run start",
    "start:backend": "cd apps/attachment-loop && npm run start",
    "install:all": "npm install && cd apps/dashboard && npm install && cd ../attachment-loop && npm install",
    "build": "cd apps/dashboard && npm run build",
    "build:all": "npm run install:all && npm run build",
    "lint": "cd apps/dashboard && npm run lint",
    "type-check": "cd apps/dashboard && npm run type-check",
    "test": "jest",
    "setup": "call scripts\\setup.bat",
    "clean": "if exist .next rmdir /s /q .next && cd apps/dashboard && if exist .next rmdir /s /q .next"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.17.0",
    "@google/generative-ai": "^0.24.1",
    "@radix-ui/react-tabs": "^1.0.4",
    "@supabase/supabase-js": "^2.39.0",
    "chokidar": "^4.0.3",
    "clsx": "^2.0.0",
    "dotenv": "^17.0.0",
    "lucide-react": "^0.294.0",
    "next": "^15.0.0",
    "nodemailer": "^6.9.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.3.6",
    "winston": "^3.17.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/nodemailer": "^6.4.14",
    "@types/react": "^18.2.42",
    "@types/react-dom": "^18.2.17",
    "concurrently": "^9.2.0",
    "eslint": "^8.54.0",
    "eslint-config-next": "^15.0.0",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
